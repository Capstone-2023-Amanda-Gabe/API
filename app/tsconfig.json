{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "test/*": [
        "test/*"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "baseUrl": ""
  },
  "include": [".ts", ".tsx"],
  "extends": "expo/tsconfig.base"
}
